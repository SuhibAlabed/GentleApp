<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GentleMan_v13" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="textAppearanceButton">@style/TextAppearance.MaterialComponents.Button</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.GentleMan_v13.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.GentleMan_v13.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.GentleMan_v13.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Widget.NavigationView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/kharabeeshfont1</item>
    </style>
    <style name="ThemeOverlay.GentleMan_v13" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/primary_color</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
        <!-- Customize text field of the text input mode. -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.FilledBox</item>
    </style>
    <style name="CustomRadioTheme" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:colorControlNormal">#7a7a7a</item>
        <item name="android:colorControlActivated">#fff</item>
        <item name="android:colorControlHighlight">#fff</item>
    </style>
</resources>