<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#331B1B"
    android:id="@+id/drawerLayout">

        <HorizontalScrollView
            android:id="@+id/scrollAds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:fillViewport="true"
            android:measureAllChildren="false"
            app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/imageView1"
                            android:layout_width="415dp"
                            android:layout_height="180dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ads1"
                            tools:ignore="MissingClass" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/imageView2"
                            android:layout_width="415dp"
                            android:layout_height="180dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ads1"
                            tools:ignore="MissingClass" />

                </LinearLayout>

        </HorizontalScrollView>


        <TextView
            android:id="@+id/ServicesTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/kharabeeshfont1"
            android:text="Services"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollAds" />


        <!-- START Items_1-->
        <Button
            android:id="@+id/BtnHaircut"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/scissors"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/ServicesTxt"
            tools:ignore="MissingConstraints"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kharabeeshfont1"
            android:text="Haircut"
            android:textColor="#fff"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/BtnHaircut"
            app:layout_constraintStart_toStartOf="@+id/BtnHaircut"
            app:layout_constraintTop_toBottomOf="@+id/BtnHaircut" />
        <!-- END Items_1-->


        <!-- START Items_2-->
        <Button
            android:id="@+id/HairdryerBtn"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/hairdryer"
            app:layout_constraintEnd_toStartOf="@+id/HairColoringBtn"
            app:layout_constraintStart_toEndOf="@+id/BtnHaircut"
            app:layout_constraintTop_toBottomOf="@+id/ServicesTxt"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kharabeeshfont1"
            android:text="Hair Dryer"
            android:textColor="#fff"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/HairdryerBtn"
            app:layout_constraintStart_toStartOf="@+id/HairdryerBtn"
            app:layout_constraintTop_toBottomOf="@+id/HairdryerBtn" />
        <!-- END Items_2-->



        <!-- START Items_3-->
        <Button
            android:id="@+id/HairColoringBtn"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/hairdye"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ServicesTxt" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kharabeeshfont1"
            android:text="coloring"
            android:textColor="#fff"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/HairColoringBtn"
            app:layout_constraintStart_toStartOf="@+id/HairColoringBtn"
            app:layout_constraintTop_toBottomOf="@+id/HairColoringBtn" />
        <!-- END Items_3-->

        <!-- START Items_4-->
        <Button
            android:id="@+id/HairStraightBtn"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/hairstraightener"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kharabeeshfont1"
            android:text="Hair\nStraight"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/HairStraightBtn"
            app:layout_constraintStart_toStartOf="@+id/HairStraightBtn"
            app:layout_constraintTop_toBottomOf="@+id/HairStraightBtn" />
        <!-- END Items_4-->

        <!-- START Items_5-->

        <Button
            android:id="@+id/HairStyleBtn"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/man"
            app:layout_constraintEnd_toStartOf="@+id/ShavingBtn"
            app:layout_constraintStart_toEndOf="@+id/HairStraightBtn"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kharabeeshfont1"
            android:text="Hair\nStyle"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/HairStyleBtn"
            app:layout_constraintStart_toStartOf="@+id/HairStyleBtn"
            app:layout_constraintTop_toBottomOf="@+id/HairStyleBtn" />
        <!-- END Items_5-->

        <!-- START Items_6-->
        <Button
            android:id="@+id/ShavingBtn"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/beard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kharabeeshfont1"
            android:text="Beard\ntrimming"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/ShavingBtn"
            app:layout_constraintStart_toStartOf="@+id/ShavingBtn"
            app:layout_constraintTop_toBottomOf="@+id/ShavingBtn" />
        <!-- END Items_6-->
</androidx.constraintlayout.widget.ConstraintLayout>