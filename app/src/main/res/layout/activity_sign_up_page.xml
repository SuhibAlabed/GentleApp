<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignUpPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#331B1B">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/kharabeeshfont1"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <!--Edit Text For Name-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTextTextPersonNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/kharabeeshfont1"
        android:layout_marginTop="30dp"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:startIconDrawable="@drawable/ic_baseline_person_24"
        app:hintEnabled="false"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextTextPersonName"
            app:expandedHintEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:singleLine="true"
            android:hint="Enter Your Name"
            android:textColor="#fff"
            android:fontFamily="@font/kharabeeshfont1"
            android:background="@drawable/rounded_corner_edit_text"/>
    </com.google.android.material.textfield.TextInputLayout>




    <!--Edit Text For Age-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTextNumberLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/kharabeeshfont1"
        android:layout_marginTop="30dp"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonNameLayout"
        app:startIconDrawable="@drawable/baseline_pin_24"
        app:hintEnabled="false"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextNumber"
            app:expandedHintEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter Your Age"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="#fff"
            android:fontFamily="@font/kharabeeshfont1"
            android:background="@drawable/rounded_corner_edit_text"/>
    </com.google.android.material.textfield.TextInputLayout>


    <!--Edit Text For Email-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTextTextEmailAddressLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/kharabeeshfont1"
        android:layout_marginTop="30dp"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberLayout"
        app:startIconDrawable="@drawable/ic_baseline_email_24"
        app:hintEnabled="false"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextTextEmailAddress"
            app:expandedHintEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter Your Email"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textColor="#fff"
            android:fontFamily="@font/kharabeeshfont1"
            android:background="@drawable/rounded_corner_edit_text"/>
    </com.google.android.material.textfield.TextInputLayout>


    <!--Edit Text For Password-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTextTextPasswordLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/kharabeeshfont1"
        android:layout_marginTop="30dp"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddressLayout"
        app:startIconDrawable="@drawable/baseline_password_24"
        app:hintEnabled="false"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextTextPassword"
            app:expandedHintEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter Your password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="#fff"
            android:fontFamily="@font/kharabeeshfont1"
            android:background="@drawable/rounded_corner_edit_text"/>
    </com.google.android.material.textfield.TextInputLayout>


    <!--Edit Text For Phone Number-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTextPhoneLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/kharabeeshfont1"
        android:layout_marginTop="30dp"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPasswordLayout"
        app:startIconDrawable="@drawable/baseline_local_phone_24"
        app:hintEnabled="false"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextPhone"
            app:expandedHintEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter Your Phone Number"
            android:pointerIcon="cell"
            android:inputType="phone"
            android:singleLine="true"
            android:textColor="#fff"
            android:fontFamily="@font/kharabeeshfont1"
            android:background="@drawable/rounded_corner_edit_text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/kharabeeshfont1"
        android:text="Sign Up"
        android:background="@drawable/rounded_corner"
        android:textColor="#fff"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPasswordLayout"
        android:onClick="SignUpBtn"/>

</androidx.constraintlayout.widget.ConstraintLayout>